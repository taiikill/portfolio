import random

def validate(hand):
    if hand < 0 or hand > 2:
        return False
    return True

def print_hand(hand, name='ゲスト'):
    hands = ['グー', 'チョキ', 'パー']
    print(name + 'は' + hands[hand] + 'を出しました')

def judge(player, computer):
    if player == computer:
        return '引き分け'
    elif (player == 0 and computer == 1) or \
         (player == 1 and computer == 2) or \
         (player == 2 and computer == 0):
        return '勝ち'
    else:
        return '負け'

print('じゃんけんをはじめます')
player_name = input('名前を入力してください：')

# 空文字の場合はデフォルト1
player_input = input('何を出しますか？（0: グー, 1: チョキ, 2: パー） 数字で入力してください：')
if player_input == '':
    player_hand = 1
else:
    player_hand = int(player_input)

if validate(player_hand):
    computer1_hand = random.randint(0, 2)
    computer2_hand = random.randint(0, 2)

    if player_name == '':
        print_hand(player_hand)
    else:
        print_hand(player_hand, player_name)

    print_hand(computer1_hand, 'コンピューター1')
    print_hand(computer2_hand, 'コンピューター2')

    result1 = judge(player_hand, computer1_hand)
    result2 = judge(player_hand, computer2_hand)
    result3 = judge( computer1_hand,computer2_hand)


    print('コンピューター1との結果は' + result1 + 'でした')
    print('コンピューター2との結果は' + result2 + 'でした')
    print('コンピューター1とコンピューター2の結果は' + result3 + 'でした')

else:
    print('正しい数値を入力してください')
